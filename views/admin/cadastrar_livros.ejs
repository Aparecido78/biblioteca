</head>
<body>
     <nav class="navbar">
    <div class="nav-inner">
      <span class="area_admin">√Årea do Admin</span>
      <h1 class="biblioteca">Biblioteca</h1>
       <a class="voltar" href="/voltar/pagina/inicial">voltar</a>
      <a class="sair" href="/sair">Sair</a>
    </div>
  </nav>

    <br><br>
    <form class="form" action="/cadastrar/livro" method="post" enctype="multipart/form-data">
       <h1> Cadastrar livros </h1>
        <label>Titulo</label>
        <input type="text" name="titulo" placeholder="digite seu titulo" required>
        <br>
        <label>Autor</label>
        <input type="text" name="autor" placeholder="digite o nome do autor do livro">
        <br>
        <label>Data</label>
        <input type="date" name="data"  placeholder="Data">
        <br>
        <label>Descricao:</label>
        <input type="text" name="descricao" placeholder="descricao">
        <br>
        <label>Foto:</label>
        <input type="file" accept="file" name="foto">
        <br><br><br><br>
   
        <h1>escolher categoria</h1>
        <select name="CategoriumId">
        <br>
        <% categoria.forEach(cate =>{  %>
                <option value="<%= cate.id %>"> <%= cate.nome %></option>
               
        <% }) %>
        </select>

        <button class="salvar_butao" type="submit"> salvar </button>
    </form>


    <footer class="footer">
    <p>Biblioteca &copy; 2024</p>
  </footer>
</body>
</html>